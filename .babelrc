{
    "presets": [
      ["@babel/preset-env", {
        "targets": {
          "browsers": [
            "last 2 versions"
          ]
        }  
      }],
      "@babel/preset-react",
      [
        "@babel/preset-stage-2",
        {
          "decoratorsLegacy": true
        }
      ]
    ], 
    "plugins": [
      ["@babel/plugin-proposal-decorators", { "legacy": true }],
      ["@babel/plugin-proposal-class-properties", { "loose": true }]
    ]
  }